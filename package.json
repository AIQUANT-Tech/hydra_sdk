{
  "name": "hydra-gateway",
  "version": "1.0.0",
  "description": "API Gateway for Hydra Head Protocol on Cardano",
  "main": "dist/app.js",
  "scripts": {
    "dev": "npm run check && npm run start:hydra && ts-node-dev --respawn --transpile-only src/app.ts",
    "build": "tsc",
    "start": "npm run check && npm run start:hydra && node dist/app.js",
    "check": "bash scripts/check-prerequisites.sh",
    "start:hydra": "bash scripts/start-hydra-node.sh",
    "stop:hydra": "bash scripts/stop-hydra-nodes.sh",
    "commit": "curl -X POST http://localhost:8080/api/hydra/commit-all",
    "test": "jest",
    "lint": "eslint . --ext .ts"
  },
  "dependencies": {
    "@blockfrost/blockfrost-js": "^5.3.0",
    "@emurgo/cardano-serialization-lib-nodejs": "^11.5.0",
    "axios": "^1.5.1",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-validator": "^7.3.0",
    "joi": "^17.10.2",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.15.3",
    "sequelize": "^6.37.7",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.8.9",
    "@types/ws": "^8.5.8",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  }
}
